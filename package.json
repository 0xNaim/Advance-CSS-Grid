{
  "name": "Trillo",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "watch-sass": "node-sass sass/style.scss css/style.css -w",
    "compile-sass": "node-sass sass/style.scss css/style.comp.css",
    "prefix-css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress-css": "node-sass css/style.css css/style.min.css --output-style compressed",
    "build-css": "npm-run-all compile-sass compress-css"
  },
  "dependencies": {
    "node-sass": "^6.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.1",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1"
  }
}
